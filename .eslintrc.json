{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-console": "off",
        "linebreak-style": "off",
        "padded-blocks": [
            "error",
            "always"
        ],
        "arrow-body-style": [
            "error",
            "always"
        ],
        // "allowTernary": true,
        "strict": [
            "error",
            "global"
        ],
        "max-len": [
            "error",
            {
                "code": 150
            }
        ]
    }
}